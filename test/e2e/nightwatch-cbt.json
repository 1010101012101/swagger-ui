{
  "src_folders" : ["test/e2e/scenarios"],
  "output_folder" : "reports",
  "live_output": true,
  "custom_commands_path" : "",
  "custom_assertions_path" : "",
  "page_objects_path" : "test/e2e/pages",
  "globals_path" : "test/e2e/cbt-globals.js",

  "test_runner" : {
    "type" : "mocha",
    "options" : {
      "ui" : "bdd",
      "reporter" : "list"
    }
  },

  "selenium" : {
    "start_process" : false,
    "server_path" : "",
    "log_path" : "",
    "host" : "127.0.0.1",
    "port" : 4444,
    "cli_args" : {
      "webdriver.chrome.driver" : "",
      "webdriver.ie.driver" : ""
    }
  },

  "test_settings" : {
    "default" : {
      "launch_url" : "http://localhost",
      "selenium_port"  : 80,
      "selenium_host"  : "hub.crossbrowsertesting.com",
      "silent": true,
      "screenshots" : {
        "enabled" : false,
        "path" : ""
      },
      "username": "${CBT_USERNAME}",
      "access_key": "${CBT_AUTHKEY}",
      "desiredCapabilities": {
        "acceptSslCerts": "1",
        "browserName": "chrome",
        "javascriptEnabled": "1",
        "record_network" : "true",
        "record_video" : "true",
        "max_duration": 1200
      }
    }
  }
}
